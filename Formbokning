    echo "<h2>Tack för din bokning!</h2>";
    echo "<p>Följande uppgifter har skickats in:</p><ul>";

    foreach ($_POST as $key => $value) {
        if ($key != "submit") {
            echo "<li><strong>" . htmlspecialchars($key) . ":</strong> " . htmlspecialchars($value) . "</li>";
        }
    }

    echo "</ul><a href='formbokning.php'>Tillbaka till formuläret</a>";
    exit;
}
